        {% set data = [{'value': 'peridico', 'name': 'Periodico'},
	        {'value': 'retiro', 'name': 'Retiro'},
	        {'value': 'reubicacion', 'name': 'Reubicación'},
	        {'value': 'post_incapacidad', 'name': 'Post Incapacidad'}
        ] %}

